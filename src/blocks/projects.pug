mixin item(imgBg, title)
    .projects-items__item
        .page__img.page__img-bg
            img(src=imgBg, alt="")
        .page_bg-opacity-blueDark
        .projects-items__item-content
            h3.page__title-h3=title
            a.page__link.page__link_arrow-green(href="javascript:void(0)") Read more
section.projects.isAnimate
    .projects-items
        .projects-items__item.projects-items__item-main
            .projects-items__item-content
                h3.page__title-h3 Recent projects
                .page__text Providing local service on a national scale.
        +item("assets/img/img-project-1.png", 'Best Buy')
        +item("assets/img/img-project-2.png", 'DHL')
        +item("assets/img/img-project-3.png", 'Amazon')
        +item("assets/img/img-project-4.png", 'Home Depot')
        +item("assets/img/img-project-5.png", 'RaceTrac')
        +item("assets/img/img-project-6.png", 'Readerlink')
        .projects-items__item.projects-items__item-main
